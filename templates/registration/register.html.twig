{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <style>
        :root {
            --couleur-primaire: #34495e;
            --couleur-secondaire: #f4e1d2;
            --couleur-fond: #f7f3f0;
            --couleur-texte: #2c3e50;
            --couleur-blanc: #ffffff;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--couleur-fond);
            color: var(--couleur-texte);
        }

        
    </style>
{% endblock %}

{% block body %}
    <main class="h-max flex flex-col items-center justify-center bg-gradient-to-r  py-5 md:py-16">
        {% if app.user %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <h2 class="text-xl font-bold mb-2">Vous êtes déjà authentifié</h2>
                <h3 class="mb-2">{{ app.user.username }}</h3>
                <p class="mb-2">Would you like to</p>
                <a href="{{ path('app_logout') }}" class="font-bold text-sky-600 hover:text-sky-800">Logout ?</a>
            </div>
        {% else %}
            <header class="text-center mb-4">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Inscription</h1>
                <p class="text-slate-600 mb-4">
                    Créez votre compte pour commencer.
                </p>
            </header>

            <div class="my-10 p-4 rounded-md shadow-md bg-slate-50 min-w-80">
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    <div class="mb-4">
                        {{ form_label(registrationForm.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'block font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'border-2 border-violet-950 rounded-md p-2 w-full focus:border-violet-600'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'block font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'border-2 border-violet-950 rounded-md p-2 w-full focus:border-violet-600'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'border-2 border-violet-950 rounded-md p-2 w-full focus:border-violet-600'}}) }}
                    </div>

                    <div class="mb-4 flex items-center">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded'}}) }}
                        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                    </div>

                    <button type="submit" class="bg-sky-950 p-2 flex items-center gap-2 rounded-md mt-4 w-full justify-center text-white hover:bg-sky-800">
                        S'inscrire
                    </button>
                {{ form_end(registrationForm) }}
            </div>

            <p class="text-center text-slate-600 mb-4 text-sm pb-48">
                Vous avez déjà un compte ?
                <a href="{{ path('app_login') }}" class="text-sky-950 hover:text-sky-800">Connectez-vous</a>
            </p>
        {% endif %}
    </main>
{% endblock %}