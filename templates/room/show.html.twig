{% extends 'base.html.twig' %}

{% block title %}{{room.name}} - 
{% endblock %}

{% block body %}
	<div class="flex flex-col md:flex-row">
		<div class="w-full p-4 md:w-1/2">
			<img src="{{ asset('images/' ~ room.image) }}" alt="{{ room.name }}" class="w-full h-auto rounded-lg shadow-lg">
		</div>
		<div class="w-full p-4 md:w-1/2">
			<h2 class="mb-4 text-2xl font-bold">{{ room.name }}</h2>
			<div class="flex items-center mb-2">
				<svg class="w-5 h-5 mr-2 text-gray-500" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
				</svg>
				<span class="text-gray-700">Étage
					{{ room.floor }}</span>
			</div>
			<div class="flex items-center mb-2">
				<svg class="w-5 h-5 mr-2 text-gray-500" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/>
				</svg>
				<span class="text-gray-700">Porte n°{{ room.doorNumber }}</span>
			</div>
			<div class="flex items-center mb-2">
				<svg class="w-5 h-5 mr-2 text-gray-500" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
				</svg>
				<span class="text-gray-700">Capacité
					{{ room.capacity }}
					personnes</span>
			</div>
			{% if room.Backup %}
				<div class="px-4 py-2 mb-4 text-yellow-800 bg-yellow-100 rounded-lg">
					<svg class="inline-block w-5 h-5 mr-2" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
					</svg>
					<span>Salle de secours</span>
				</div>
			{% endif %}
			<h3 class="mb-2 text-xl font-bold">Équipements</h3>
			<ul class="pl-6 text-gray-700 list-disc">
				{% for roomEquipment in room.roomEquipment %}
					<li>{{ roomEquipment.equipment.name }}
						(Quantité:
						{{ roomEquipment.quantity }})</li>
				{% endfor %}
			</ul>
			<h3 class="mt-4 mb-2 text-xl font-bold">Ergonomie</h3>
			<ul class="pl-6 text-gray-700 list-disc">
				{% for roomErgonomic in room.roomErgonomics %}
					<li>{{ roomErgonomic.ergonomic.name }}</li>
				{% endfor %}
			</ul>
			<div class="flex justify-end mt-8">
				<a href="{{ path('app_reservation_verif', {'id': room.id}) }}" class="inline-flex items-center px-4 py-2 font-medium text-white transition duration-300 ease-in-out bg-blue-500 rounded-md shadow-sm hover:bg-blue-600">
					<svg class="w-5 h-5 mr-2" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
					</svg>
					Réserver cette Salle
				</a>
			</div>
		</div>
	</div>

{% endblock %}
