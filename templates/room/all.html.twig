{% extends 'base.html.twig' %}

{% block title %}Liste des salles
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-6">Liste des salles</h1>
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
			{% for room in rooms %}
				<div class="bg-white rounded-lg shadow-md overflow-hidden">
					<a href="{{ path('app_room_show', {'id': room.id}) }}">
						<img src="{{ asset('images/' ~ room.image) }}" alt="{{ room.name }}" class="w-full h-48 object-cover">
						<div class="p-4">
							<h2 class="text-xl font-semibold mb-2">{{ room.name }}</h2>
							<p class="text-gray-600 mb-2">Capacité:
								{{ room.capacity }}
								personnes</p>
							<p class="text-gray-600 mb-2">Étage:
								{{ room.floor }}</p>
							<p class="text-gray-600 mb-2">Numéro de porte:
								{{ room.doorNumber }}</p>
							<p class="text-gray-600 mb-2">
								{% if room.isBackup %}
									<span class="text-green-600">Salle de secours</span>
								{% else %}
									<span class="text-blue-600">Salle principale</span>
								{% endif %}
							</p>
							<div class="mt-4">
								<h3 class="font-semibold mb-2">Équipements:</h3>
								<ul class="list-disc list-inside">
									{% for roomEquipment in room.roomEquipment %}
										<li>{{ roomEquipment.equipment.name }}
											(Quantité:
											{{ roomEquipment.quantity }})</li>
									{% endfor %}
								</ul>
							</div>
							<div class="mt-4">
								<h3 class="font-semibold mb-2">Ergonomie:</h3>
								<ul class="list-disc list-inside">
									{% for roomErgonomic in room.roomErgonomics %}
										<li>{{ roomErgonomic.ergonomic.name }}</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
